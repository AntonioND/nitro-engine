# Variables

CFLAGS		:= -g -Wall
RM		:= rm -rf

# Rules to build the binary

all: md2_to_bin

md2_to_bin_obj := md2_to_bin.o dlmaker.o

md2_to_bin: $(md2_to_bin_obj)
	$(CC) $(CFLAGS) -o $@ $(md2_to_bin_obj)

.c.o:
	$(CC) $(CFLAGS) -c -o $@ $<

# Target used to remove all files generated by other Makefile targets

clean:
	$(RM) md2_to_bin md2_to_bin.exe $(md2_to_bin_obj)
